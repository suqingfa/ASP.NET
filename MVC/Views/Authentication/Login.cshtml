 @{ Layout = null; } @model MVC.Models.UserDetails
<!DOCTYPE html>

<html>

<head>
<meta name="viewport" content="width=device-width" />
<script src="~/Scripts/jquery-1.8.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<title>Login</title>
</head>

<body>
	<div>
        @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
        @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
        {
            @Html.LabelFor(c => c.UserName);
            @Html.TextBoxFor(x => x.UserName);<br />
            @Html.ValidationMessageFor(x => x.UserName)
            <br />
            @Html.LabelFor(c => c.Password);
            @Html.PasswordFor(x => x.Password);<br />
            @Html.ValidationMessageFor(x => x.Password)
            <br />
            <input type="submit" name="BtnSubmit" value="Login"/>
        }
	</div>
</body>

</html>